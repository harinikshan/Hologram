<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/embdes_background">


    <ImageView
        android:id="@+id/logoimageView3"
        android:layout_width="119dp"
        android:layout_height="103dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="99dp"
        android:rotation="270"
        android:src="@drawable/spedometer" />

    <ImageView
        android:id="@+id/logoimageView2"
        android:layout_width="119dp"
        android:layout_height="103dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="93dp"
        android:rotation="90"

        android:src="@drawable/spedometer" />

    <ImageView
        android:id="@+id/logoimageView4"
        android:layout_width="119dp"
        android:layout_height="103dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="205dp"
        android:rotation="180"
        android:src="@drawable/spedometer" />

    <ImageView
        android:id="@+id/logoimageView"
        android:layout_width="119dp"
        android:layout_height="103dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="188dp"
        android:src="@drawable/spedometer" />

    <TextView
        android:id="@+id/num3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="247dp"
        android:rotation="180"
        android:text="0"
        android:textColor="?attr/colorError" />

    <TextView
        android:id="@+id/num2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="147dp"
        android:rotation="90"
        android:text="0"
        android:textColor="?attr/colorError" />

    <TextView
        android:id="@+id/num4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="152dp"
        android:rotation="270"
        android:text="0"
        android:textColor="?attr/colorError" />

    <TextView
        android:id="@+id/num1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="229dp"
        android:text="0"
        android:textColor="?attr/colorError" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/logoimageView3"
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/logoimageView2"
        android:layout_below="@+id/tv2"
        android:textColor="@android:color/holo_red_dark" />


</RelativeLayout>